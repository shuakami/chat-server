{
    "version": 2,
    "builds": [
      {
        "src": "server.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.ts"
      }
    ],
    "crons": [
      {
        "path": "/api/tasks/cleanup",
        "schedule": "0 3 * * *"
      }
    ]
  }